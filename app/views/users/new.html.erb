<div class="login">
  <div class="container">
    <div class="form">

      <h1>Sign up</h1>
      <%= form_for(@user) do |f| %>
        <div class="field">
          <%= f.label :first_name %><br>
          <%= f.text_field :first_name %><br>
          <%= f.label :last_name %><br>
          <%= f.text_field :last_name %><br>
          <%= f.label :email %><br>
          <%= f.text_field :email %><br>
          <%= f.label :password_digest %><br>
          <%= f.text_field :password_digest %>
        </div>
        <div class="actions">
          <%= f.submit "Create" %>
        </div>
      <% end %>
      
    </div>
  </div>
</div>